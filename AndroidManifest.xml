<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.redditmeetbeautiful"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="WEATHER FORECAST" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomListViewActivity"
            android:label="@string/title_activity_custom_list_view" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Weather Report" >
        </activity>
        <activity
            android:name=".CheckCityActivity"
            android:label="@string/title_activity_check_city" >
        </activity>
    </application>

</manifest>